
    <div class="border-slate-500 border-dashed border-2 w-2/5 mx-8 p-4">
      <h3 class="text-center font-bold">Your Blog Posts</h3>
    {{#each posts as |post|}}
        <div>
          <div class="flex">
            <h4
              class="flex flex-row justify-between m-2 border-2 border-slate-500 w-full"
            ><a href= "/listing/{{post.id}}">{{post.name}}</a><button
                class="border-2 border-black rounded bg-red-500 text-white w-1/5 login-button listing-list"
                data-id="{{post.id}}"
              >DELETE</button></h4>
          </div>
          <div class="text-center">
            {{!-- <button
              class="border-2 border-black rounded bg-red-500 text-white w-1/2 login-button"
              data-id="{{listing.id}}"
            >DELETE</button> --}}
          </div>
        </div>
      {{/each}}
    </div>
    <button    
          class="m-2 w-36 border-2 text-white text-center border-black rounded bg-sky-800 bg-opacity-80"
          id="add-post">Add Blog Post</button>

<!-- The Modal -->
<div id="post-modal" class="modal">

  <!-- Modal content -->
  <div class="modal-content">
    <span class="close">&times;</span>
    <form class="form login-form bg-sky-200 bg-opacity-50 signup-form">
  <div class="form-group">
    <label for="post-title">Title:</label>
    <input class="form-input" type="text" id="post-title" />
  </div>
  <div class="form-group">
    <label for="post-text">Text:</label>
    <input class="form-input" type="text" id="post-text" />
  </div>
  </div>
  </form>

</div>

<script src="/js/addPost.js"></script>
