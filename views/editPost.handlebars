<div class="w-full h-36 border-2 border-black rounded m-6"><div
      class="flex h-1/5 bg-zinc-800 justify-between text-center align-middle text-white"
    ><p>{{post.title}}</a><p>Posted
        on
        {{post.date}}</p></div><div
      class="h-4/5 bg-sky-800 bg-opacity-80 text-white text-center"
    ><p>{{post.text}}</p></div>
</div>
<form class="form login-form bg-sky-200 bg-opacity-50 signup-form">
      <div class="form-group">
        <label for="update-title">Title:</label>
        <input class="form-input" type="text" id="update-title"/>
      </div>
      <div class="form-group">
        <label for="update-text">Text:</label>
        <input class="form-input" type="text" id="update-text"/>
      </div>
      <div class="form-group">
        <label for="update-id">Id:</label>
        <input class="form-input" type="text" id="update-id" value={{post.id}} />
      </div>
      <button
        id="update-button"
        class="m-2 w-36 border-2 text-white text-center border-black rounded bg-sky-800 bg-opacity-80 hover:bg-opacity-100"
      >Update</button>
      <button 
        id="delete-button"
        class="m-2 w-36 border-2 text-white text-center border-black rounded bg-sky-800 bg-opacity-80 hover:bg-opacity-100">Delete</button>
    </form>

<script src="/js/editPost.js"></script>